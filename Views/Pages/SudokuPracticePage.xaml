                   Text="{Binding Path=Notes[8].Value, Mode=OneWay}"
                   Style="{StaticResource NoteCellStyle}"
                   Grid.Column="2"
                   Grid.Row="2"/>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Path=CellState}" Value="Answer">
                    <Setter Property="Text" Value="{Binding Path=Answer, Mode=OneWay}" TargetName="Cell"/>
                    <Setter Property="IsEnabled" Value="False" TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="Hint">
                    <Setter Property="Text" Value="{Binding Path=Answer, Mode=OneWay}" TargetName="Cell"/>
                    <Setter Property="Foreground" Value="BlueViolet" TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="Blank">
                    <Setter Property="Text" Value=" " TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="UserInputCorrect" >
                    <Setter Property="Text" Value="{Binding Path=UserAnswer, Mode=OneWay}" TargetName="Cell"/>
                    <Setter Property="Foreground" Value="DarkGreen" TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="UserInputIncorrect" >
                    <Setter Property="Text" Value="{Binding Path=UserAnswer, Mode=OneWay}" TargetName="Cell"/>
                    <Setter Property="Foreground" Value="DarkRed" TargetName="Cell"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=CellState}" Value="Notes">
                    <Setter Property="Margin" Value="5" TargetName="CellGrid" />
                    <Setter Property="Visibility" Value="Hidden" TargetName="Cell" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note1" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note2" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note3" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note4" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note5" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note6" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note7" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note8" />
                    <Setter Property="Visibility" Value="Visible" TargetName="Note9" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

